<UserControl x:Class="ProjektStacjaWPF.UI_Models.PasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjektStacjaWPF.UI_Models"
             Width="250" Height="50"
             mc:Ignorable="d">
    <Border x:Name="Border" BorderBrush="#FF808080" BorderThickness="3" CornerRadius="8" Background="#80606060">
        <Grid Background="Transparent">
            <PasswordBox x:Name="InputText" FontSize="24" Background="Transparent"
                     Foreground="Gray" Margin="15,5" BorderThickness="0"
                     GotFocus="InputText_OnGotFocus" LostFocus="InputText_OnLostFocus"/>
        </Grid>
    </Border>
</UserControl>
